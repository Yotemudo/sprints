        <div class="content">
            <h2 class="logo">Solicitud de <span class="logo2"> Registro </span></h2>
            <div class="formulario_entero">
                <div class="formulario_de_contacto_gral">
                    <h1> Datos de usuario </h1>

                    <form action="/users/registro" method='POST' enctype="multipart/form-data" class="jsFrontRegistro ">
                        <div class="datos">
                            <div class="datos_de_contacto">
                                <div class="cajaDato">
                                    <label for="nombre">NOMBRE </label>
                                    <input class="nombre" type="text" name="nombre" id="nombre"
                                        value="<%=locals.oldData?oldData.nombre:""%>">
                                    <% if (locals.errors && errors.nombre) { %>
                                        <div class="classeError">
                                            <%=errors.nombre.msg %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="cajaDato">
                                    <label for="apellido">APELLIDO</label>
                                    <input class="apellido" type="text" name="apellido" id="apellido"
                                        value="<%=locals.oldData?oldData.apellido:""%>">
                                    <% if (locals.errors && errors.apellido) { %>
                                        <div class="classeError">
                                            <%=errors.apellido.msg %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="cajaDato">
                                    <label for="usuario">USUARIO</label>
                                    <input class="usuario" type="text" name="usuario" id="usuario"
                                        value="<%=locals.oldData?oldData.usuario:""%>">
                                    <!-- <i class="formulario__validacion-estado fas fa-times-circle"></i> -->
                                    <% if (locals.errors && errors.usuario) { %>
                                        <div class="classeError">
                                            <%=errors.usuario.msg %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="cajaDato">
                                    <label for="email">E-MAIL</label> <br>
                                    <input class="email" type="text" name="email" id="email"
                                        value="<%=locals.oldData?oldData.email:""%>" placeholder="correo electronico">
                                    <% if (locals.errors && errors.email) { %>
                                        <div class="classeError">
                                            <%=errors.email.msg %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="cajaDato">
                                    <label for="telefono">TELEFONO</label>
                                    <input class="telefono" type="number" name="telefono" id="telefono"
                                        value="<%=locals.oldData?oldData.telefono:""%>" placeholder="11 4444 4444">
                                    <% if (locals.errors && errors.telefono) { %>
                                        <div class="classeError">
                                            <%=errors.telefono.msg %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="cajaDato">
                                    <label for="domicilio">DOMICILIO</label>
                                    <input class="domicilio" type="text" name="domicilio" id="domicilio"
                                        value="<%=locals.oldData?oldData.domicilio:""%>"
                                        placeholder="Ingrese calle y altura">
                                    <% if (locals.errors && errors.domicilio) { %>
                                        <div class="classeError">
                                            <%=errors.domicilio.msg %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="cajaDato">
                                    <label for="localidad">LOCALIDAD</label>
                                    <input class="localidad" type="text" name="localidad" id="localidad"
                                        value="<%=locals.oldData?oldData.localidad:""%>"
                                        placeholder="Ingrese su localidad">
                                    <% if (locals.errors && errors.localidad) { %>
                                        <div class="classeError">
                                            <%=errors.localidad.msg %>
                                        </div>
                                        <% } %>
                                </div>

                                <div class="cajaDato">
                                    <label for="claveUsuario">CONTRASEÑA</label>
                                    <input class="password" type="password" name="claveUsuario" id="claveUsuario"
                                        value="<%=locals.oldData?oldData.claveUsuario:""%>">
                                    <% if (locals.errors && errors.claveUsuario) { %>
                                        <div class="classeError">
                                            <%=errors.claveUsuario.msg %>
                                        </div>
                                        <% } %>
                                </div>

                                <div class="cajaDato">
                                    <label for="fotoDePerfil">FOTO DE PERFIL</label>
                                    <input class="imagen" type="file" name="fotoDePerfil" id="fotoDePerfil">
                                    <% if (locals.errors && errors.fotoDePerfil) { %>
                                        <div class="classeError">
                                            <%=errors.fotoDePerfil.msg%>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                            <div>
                                <button type="submit">ENVIAR</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="formulario_de_info">
                    <!-- <h4>SOBRE NOSOTROS</h4> -->
                    <div class="ulErroresFrontRegistro">
                        <ul></ul>
                    </div>
