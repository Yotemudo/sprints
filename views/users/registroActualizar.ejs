    <link rel="stylesheet" href="/css/registroStyles.css">
</head>

<body>

    <%- include('../partials/header') %>
        <!-- <header>
            <div class="logoyotemudo"><a href="/">
                <img id= "your" width="250" height="55" src= '/img/your-logo.png'alt= 'Imagen de logo'></img>
