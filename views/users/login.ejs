<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>teMudo.com</title>

    <meta name="viewport" content="width= device-width , initial-scale=1">

    <!-- Enlace con CCS-->
    <link rel="stylesheet" href="/css/indexNormalize.css">
    <link rel="stylesheet" href="/css/loginStyles.css" />

    <!-- Enlace con js en el Front-->
    <script src="/scripts/js_LoginFront.js"></script>

</head>

<body class="background">
    <%- include('../partials/header') %>
        <main>
            <form Action='login' method='POST' class="front-js">
                <div class="centrado">

                    <div class="icono_login">
                        <img src="/img/user-solid.svg"> </img>
                    </div>
                    <h2 class="titulo_Ingreso"> INICIAR SESION </h2>
                    <p> <label for='usuario'>
                            <input required class="formularios usuario" type="text" name="usuario" id="usuario"
                                placeholder="Usuario" size="35" maxlength="30" autofocus>
                            <% if (locals.errors && errors.usuario) { %>
                                <div class="classeError">
                                    <%=errors.usuario.msg %>
                                </div>
                                <% } %>
                        </label>
                    </p>
                    <!-- <div class="ul_error_usuario">
                        </div> -->
                    <p> <label for='claveUsuario'>
                            <input required class="formularios clave" type="password" name="claveUsuario"
                                id="claveUsuario" placeholder="Contraseña" size="35" maxlength="30">
                            </input>
                        </label>
                    </p>
                    <!--<input type="submit" value="Reestablecer contraseña / Registrarse" style="vertical-align: middle"> -->
                    <div class="ul_errores">
                        <ul></ul>
                    </div>
                    <div>
                        <button class="carrito-volver" type="submit">
                            <img src="/img/send.svg" alt="Icono de Ingreso" width="20" height="20"
                                style="vertical-align: middle">
                            CONFIRMAR
                        </button>
                    </div>

                    <br>
                    <div class="otros-accesos">
                        <a href='#'>Olvide mi contraseña</a> |
                        <a href="registro">Crear cuenta</a>
                    </div>
                </div>
            </form>
        </main>
        <br>
        <br>
        <br>
        <%- include('../partials/footer') %>
</body>

</html>